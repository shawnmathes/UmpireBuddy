<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dip">
    <TableLayout android:layout_height="wrap_content"
                 android:layout_width="wrap_content"
                 android:layout_gravity="center">
        <TableRow>
        <TextView  android:layout_width="fill_parent" 
                   android:layout_height="wrap_content"
                   android:textSize="24.5sp"
                   android:gravity="right"
                   android:text="@string/strike_text_label"
                   android:paddingRight="15dip"/>
        <TextView  android:layout_width="fill_parent" 
                   android:layout_height="wrap_content" 
                   android:textSize="24.5sp"
                   android:id="@+id/strike_textview"/>
        </TableRow>
        <TableRow>
        <TextView  android:layout_width="fill_parent" 
                   android:layout_height="wrap_content"
                   android:textSize="24.5sp"
                   android:gravity="right"
                   android:text="@string/ball_text_label"
                   android:paddingRight="15dip"/>
        <TextView  android:layout_width="fill_parent" 
                   android:layout_height="wrap_content" 
                   android:textSize="24.5sp"
                   android:id="@+id/ball_textview"/>
        </TableRow>
    </TableLayout>

	<Button android:id="@+id/strike_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:textSize="24.5sp"
	        android:text="@string/strike_button_label" />
	<Button android:id="@+id/ball_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:textSize="24.5sp"
	        android:text="@string/ball_button_label" />

</LinearLayout>

